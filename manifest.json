{
	"name": "WebScreen Extension",
	"version": "2.1",
	"manifest_version": 3,
	"icons": {
		"16": "img/icon.png",
		"32": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"action": {
		"default_title": "URL to Movie",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab",
		"scripting",
		"storage",
		"downloads"
	],
	"background": {
		"service_worker": "background.js"
	},
	"host_permissions": [
		"https://web-screen.net/*"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content-script.js"
			]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	}
}
